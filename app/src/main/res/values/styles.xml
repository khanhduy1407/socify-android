<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.Socify" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
    <item name="android:windowBackground">@mipmap/ic_launcher</item>
    <item name="android:windowNoTitle">true</item>
  </style>
  
  <style name="MenuStyle" parent="Theme.MaterialComponents.Light">
    <item name="android:background">@color/white</item>
  </style>
</resources>
